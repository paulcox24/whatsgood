<%= simple_form_for [@user, @event], html: { role: 'form'} do |f| %>
  <%= f.input :name, placeholder: 'Name', label: false %>
  <%= f.input :image_url, as: :hidden %>
  <%= f.input :start_time %>
  <%= f.input :stop_time %>
  <%= f.input :venue_name, placeholder: 'Venue', label: false %>
  <%= f.input :venue_address, placeholder: 'Address', label: false %>
  <%= f.input :city_name, placeholder: 'City', label: false %>
  <%= f.input :description, placeholder: 'Description', label: false %>
  <%= f.button :submit %>
<% end %>
