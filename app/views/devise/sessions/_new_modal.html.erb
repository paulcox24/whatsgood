<%= javascript_include_tag 'devise_sessions_modal' %>
<%= stylesheet_link_tag 'devise_sessions_modal' %> 
<div class="panel panel-default login" id="makeitso">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">Login</h3>
    <%= simple_form_for(resource, url: session_path(resource), html: { role: 'form', class: 'form-horizontal'}) do |f| %>
    <span class="pull-right">Don't have an account? &nbsp; <%= link_to "Sign up", new_registration_path(resource), class: "btn btn-primary" %></span>
  </div>  
  <div class="panel-body">
      <div class="container-fluid">  
        <%= link_to user_omniauth_authorize_path(:facebook), class: "pull-right" do %>
          <i class="fa fa-facebook-square"></i> Sign In With Facebook
        <% end %>
        <div class="form-group form-group-lg">
          <div>
            <%= f.text_field :email, class: "form-control", required: false, autofocus: true, placeholder: 'Email'%>
          </div>
        </div>

        <div class="form-group form-group-lg">
          <div>
            <%= f.password_field :password, class: 'form-control', autocomplete: "off", required: false, placeholder: 'Password' %>
            <%= link_to "Forgot your password?", new_password_path(resource), class: "pull-right"%>
            </br></br>
          </div>
        </div>
      </div>
      <div class="btn-group col-xs-6" data-toggle="buttons">
        <label class="btn btn-primary btn-block">
          <input class="boolean optional" id="user_remember_me" name="user[remember_me]" type="checkbox" value="1"> Remember me
        </label>
      </div>
      <div class="btn-group col-xs-6">
        <%= f.button :submit, "Sign in", class: 'btn btn-success btn-block', id: 'tragdor' %>
      </div> 

    <% end %>
  </div>
</div>  

